<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.cardview.widget.CardView
        android:id="@+id/ll"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="10dp"
        android:elevation="5dp"
        app:cardElevation="5dp"
        android:background="#BFFFFFFF"
        android:backgroundTint="#BFFFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/customer_uid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="id" />
                <ImageView
                    android:layout_width="80dp"
                    android:src="@drawable/user_4"
                    android:layout_height="80dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:text="Customer Name:-"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/cust_name"
                    android:textColor="@color/purple_700"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sumit Kumar" />
                <TextView
                    android:layout_width="wrap_content"
  android:textColor="@color/black"
                    android:text="Customer Mobile :-"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/cust_phone"
                    android:textColor="@color/purple_700"
                    android:layout_height="wrap_content"
                    android:text="xxx-xxx-7777"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_gravity="left"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:text="Customer Email:-"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="mail"
                    android:id="@+id/cust_mail"
                    android:textColor="@color/purple_700"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:text="Customer Address:-"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/cust_address"
                    android:textColor="@color/purple_700"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>